<div class="tab-pane fade " id="show-activity">
    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <form action="/admin/item/add/activity" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" name="name" placeholder="Enter name" required>
                        </div>
                        <div class="form-group">
                            <label for="name">Type</label>
                            <input type="text" class="form-control" name="type" placeholder="Enter Type"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="name">Image</label>
                            <input type="file" class="form-control" name="image" required>
                        </div>
                        <input type="hidden" value="<%- itemId %>" name="itemId">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
                <div class="col-md-7">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Image URL</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for( let index=0; index < activity.length; index++ ) { %>
                                    <tr>
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td>
                                            <%= activity[index].name %>
                                        </td>
                                        <td>
                                            <%= activity[index].type %>
                                        </td>
                                        <td>
                                            <img src="http://localhost:3000/<%= activity[index].imageUrl %>" style="width: 200px;">
                                        </td>
                                        <td>
                                            <form action="/admin/item/<%= activity[index].itemId %>/activity/<%= activity[index].id %>?_method=DELETE" method="post">
                                                <a href="javascript:void();" type="button"
                                                    class="btn btn-warning btn-circle btn-sm button-update"
                                                     data-id="<%= activity[index].id %>" data-name="<%= activity[index].name %>"
                                                    data-type="<%= activity[index].type %>" data-item="<%= activity[index].itemId %>"><i
                                                        class="fas fa-edit"></i></a>
                                                <button type="submit" class="btn btn-danger btn-circle btn-sm"><i
                                                        class="fas fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>